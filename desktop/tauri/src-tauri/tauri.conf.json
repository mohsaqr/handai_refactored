{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Handai",
  "version": "0.1.0",
  "identifier": "me.saqr.handai",
  "build": {
    "beforeDevCommand": "cd ../.. && npm run dev || true",
    "devUrl": "http://127.0.0.1:3000",
    "beforeBuildCommand": "cd ../.. && npm run build:tauri",
    "frontendDist": "../../../out"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Handai AI Data Suite",
        "width": 1440,
        "height": 900,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  }
}
