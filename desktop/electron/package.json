{
  "name": "handai-web-electron",
  "version": "0.1.0",
  "private": true,
  "description": "Handai AI Data Suite — Electron desktop wrapper for the Next.js web app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:web": "cd ../.. && npm run build",
    "build": "npm run build:web && electron-builder",
    "pack": "npm run build:web && electron-builder --dir"
  },
  "build": {
    "appId": "me.saqr.handai-web",
    "productName": "Handai",
    "copyright": "Copyright © 2025 Saqr",
    "directories": {
      "output": "dist",
      "buildResources": "build-assets"
    },
    "files": [
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "../../.next/standalone",
        "to": "nextjs",
        "filter": ["**/*"]
      },
      {
        "from": "../../.next/static",
        "to": "nextjs/.next/static",
        "filter": ["**/*"]
      },
      {
        "from": "../../public",
        "to": "nextjs/public",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [{ "target": "dmg", "arch": ["arm64", "x64"] }]
    },
    "win": {
      "target": [{ "target": "nsis", "arch": ["x64"] }]
    },
    "linux": {
      "target": [{ "target": "AppImage", "arch": ["x64"] }]
    }
  },
  "devDependencies": {
    "electron": "^34.0.0",
    "electron-builder": "^25.0.0"
  }
}
